<h1>Listing drinking_games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Players</th>
      <th>Rules</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drinking_games.each do |drinking_game| %>
      <tr>
        <td><%= drinking_game.name %></td>
        <td><%= drinking_game.players %></td>
        <td><%= drinking_game.rules %></td>
        <td><%= link_to 'Show', drinking_game %></td>
        <td><%= link_to 'Edit', edit_drinking_game_path(drinking_game) %></td>
        <td><%= link_to 'Destroy', drinking_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

